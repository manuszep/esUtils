{
  "extends": "tslint-config-airbnb",
  "rules": {
    "import-name": [
      true,
      {
        "react": "React",
        "immutabilityHelper": "update",
        "reactAddonsShallowCompare": "shallowCompare"
      }
    ],
    "quotemark": [true, "double", "avoid-escape", "avoid-template"],
    "object-literal-key-quotes": [true, "always"],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "ter-arrow-parens": [true, "always"],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case"
      ]
    },
    "max-line-length": [
      true,
      {
        "limit": 150,
        "check-strings": true,
        "check-regex": true
      }
    ]
  }
}
